{
  "name": "gha-dx-create-deployment",
  "version": "1.0.0",
  "description": "GitHub Action to create deployments in DX platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "lint": "npx eslint --config eslint.config.mjs src/**/*.ts",
    "type-check": "tsc --noEmit",
    "lint:fix": "npx eslint --fix src/**/*.ts",
    "action:local": "cross-env LOCAL_ACTION=true jest -c jest.config.mjs __tests__/local-action.test.ts --testEnvironment=node --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luscii/gha-dx-create-deployment.git"
  },
  "keywords": [
    "github-action",
    "deployment",
    "dx"
  ],
  "author": "Luscii",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.21.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@eslint/object-schema": "^2.1.7",
    "@github/local-action": "^6.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vercel/ncc": "^0.38.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
